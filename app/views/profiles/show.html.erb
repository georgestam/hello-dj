<% content_for :title, "Profile: " + @profile.dj_name %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path(@profile.photo) %>');">
  <div class="banner-content">
    <h1> <%= @profile.dj_name.upcase %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="text-center">
        <% if @profile.user == current_user %>
          <%= link_to "Delete ", profile_path(@profile), :class => "btn btn-danger",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
          <%= link_to "Edit ", edit_profile_path(@profile), :class => "btn btn-danger" %>
       <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6" id="description">
      <h4> <strong>Bio</strong> </h4>
        <p><%= @profile.bio %></p>
      <h4> <strong>Price</strong> </h4>
        <p><%= @profile.price_hour %> Â£</p>
        <%= link_to "Book", new_profile_booking_path(@profile) , :class => "btn btn-success" %>
        <p><% @profile.id %></p>
        <p><% @profile.user.id %></p>
    </div>
    <div class="col-lg-6">
       <%=  @url_embed.html_safe %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="text-left">
        <h2> Reviews </h2>
        <% @reviews.each do |review| %>
        <ul>
          <li><%= review.description %></li>
          <li><%= review.rating %></li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container padded">
    <div id="map" style="width: 100%; height: 300px;">
    <% content_for(:after_js) do %>
      <%= javascript_tag do %>
        $(document).on('ready', function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(14);
            }
          });
        });
      <% end %>
    <% end %>
    </div>
  </div>
   </div>


