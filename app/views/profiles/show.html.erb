<% content_for :title, "Profile: " + @profile.dj_name %>

<div class="banner results-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path(@profile.photo, :transformation=>[
  {:width=>2000, :height=>400, :gravity=>"face", :crop=>"thumb"},
  {:width=>200}
  ]) %>');">
  <div class="banner-content">
    <h1> <%= @profile.dj_name.upcase %></h1>
  </div>
</div>
</br>
</br>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="text-center">
        <% if @profile.user == current_user %>
          <%= link_to "Delete ", profile_path(@profile), :class => "btn btn-danger",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
          <%= link_to "Edit ", edit_profile_path(@profile), :class => "btn btn-danger" %>
       <% end %>
      </div>
    </div>
  </div>
  </br>
  </br>
  <div class="row">
    <div class="col-lg-6" id="description">
      <h4> <strong>Bio</strong> </h4>
        <p><%= @profile.bio %></p>
      <h4> <strong>Price</strong> </h4>
        <p><%= @profile.price_hour %> Â£</p>
        <%= link_to "Book", new_profile_booking_path(@profile) , :class => "btn btn-success" %>

        <% @reviews.each do |review| %>
        <ul>
          <% review.rating.times do |i|  %>
          <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>
          <li><%= review.description %></li>
        </ul>
        <% end %>

    </div>
    <div class="col-lg-6">
       <%=  @url_embed.html_safe %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="text-left">
        <% @reviews.each do |review| %>
        <ul>
          <% review.rating.times do |i|  %>
          <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>
          <div class="card" id="reviews_card">
          <div class="card-description">

          <li><%= review.description %></li>
          </div>
          <a class="card-link" href="#" ></a>
        </div>


        </ul>
        <% end %>
      </div>
    </div>
  </div>









<div class="container" style="padding-bottom:10px;">
  <div id="map" style="width: 100%; height: 300px;">
    <%= render 'shared/map' %>
  </div>
</div>



</div>


