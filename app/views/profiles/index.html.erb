<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg');">
  <div class="banner-content">
    <h1 class="text-center">Find a DJ</h1>
  </div>
</div>


<div class="container padded">
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <% if profile.photo %>
            <div class="card-header" style="background-image: url('<%= image_path profile.photo%>')">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg')">
            </div>
          <% end %>
          <div class="card-body">
            <%= link_to profile.dj_name, profile_path(profile) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




