<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg');">
  <div class="banner-content">
    <h1 class="text-center">Our DJs</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @profiles.each do |profile| %>
    <% distance_away = Geocoder::Calculations.distance_between(Geocoder.coordinates(params[:city]), [profile.user.latitude,profile.user.longitude ]) %>
      <% if params[:max_price] && params[:max_price] != "" && params[:city] && params[:city] != "" %>
        <% if profile.price_hour < params[:max_price].to_i && distance_away <100 %>
      <div class="col-xs-12 col-sm-4 padding-images">
        <% card_photo = profile.photo.file ? cl_image_path(profile.photo) : 'http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg' %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= card_photo %>');">
          <div class="card-description">
            <p><%= profile.dj_name %></p>
          </div>
          <%= link_to "", profile_path(profile), class: 'card-link' %>
        </div>
      </div>
    <% end %>
    <% else %>
      <div class="col-xs-12 col-sm-4 padding-images">
        <% card_photo = profile.photo.file ? cl_image_path(profile.photo) : 'http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg' %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= card_photo %>');">
          <div class="card-description">
            <p><%= profile.dj_name %></p>
          </div>
          <%= link_to "", profile_path(profile), class: 'card-link' %>
        </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

