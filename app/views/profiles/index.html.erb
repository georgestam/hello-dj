<div class="container padded">
<div id="map" style="width: 100%; height: 200px;">
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
</div>
</div>

<div class="container padded">
  <div class="row">
    <% @profiles.each do |profile| %>
      <% if (params[:max_price] || params[:max_price]=="" )&& profile.price_hour < params[:max_price].to_i %>
        <div class="col-xs-12 col-sm-4">
        <% card_photo = profile.photo.file ? cl_image_path(profile.photo) : 'http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg' %>
        <div class="card text-center" style="background-image: url('<%= card_photo %>');">
          </div>
          <div class="row">
          <p class="card-title text-center"><%=link_to profile.dj_name, profile_path(profile)%></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

