<% content_for :title, "Hello DJ" %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/dvgxgsxyc/image/upload/v1471948252/dj_home.jpg');">
  <div class="banner-content">
    <h1>Hello DJ</h1>
    <p>DJ booking made easy.</p>

  </div>
</div>

<!-- Search form -->
<div class="search-box">

<%= form_tag(profiles_path, :method => "get", id: "search-form", class: "form-inline") do %>
  <div class="search-box-item">
  <%= text_field_tag :your_location, nil, :placeholder => "London", :class => "form-control" %>
  <%= select_tag :max_distance, options_for_select([0,10,25,50,100,250]), :prompt => "Search Distance", :class => "form-control"  %>
<!--   </div>
  <div class="search-box-item"> -->
  Budget:
  <input id="ex6" type="text"
  name="price_range"
  data-provide="slider"
  data-slider-min="0"
  data-slider-max="500000"
  data-slider-range="true"
  data-slider-step="10000"
  data-slider-value="[150000,350000]"
  data-slider-tooltip="hide"
  data-slider-handle="square"
  "/>
  <span id="budgetReadout"><span id="ex6SliderVal">£150k - £350k </span></span>
<!--   </div>
  <div class="search-box-item"> -->
  <%= submit_tag "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<div class="text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 padded">
      <%= image_tag("search.png", height: '70' ) %>
      <h3>Search</h3>
      <p>Quickly search for DJs.</p>
    </div>
    <div class="col-xs-12 col-md-6 padded">
      <%= image_tag("localisation.png", height: '70' ) %>
      <h3>Locate</h3>
      <p>Find DJs around you.</p>
    </div>
    <div class="col-xs-12 col-md-6 padded">
      <%= image_tag("payment.png", height: '70' ) %>
      <h3>Pay</h3>
      <p>Easy payment.</p>
    </div>
    <div class="col-xs-12 col-md-6 padded">
      <%= image_tag("rate.png", height: '70' ) %>
      <h3>Rate</h3>
      <p>Rate your experience.</p>
    </div>
  </div>
</div>

<div class="background-grey text-center">
  <h2> Selection of our top DJs</h2>
  </br>
  <div class="container">
    <div class="row">
      <% @popular_profiles.each do |profile| %>
        <div class="col-xs-12 col-sm-4 padding-images">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path(profile.photo) %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <p><%= profile.dj_name %></p>
            </div>
            <%= link_to "", profile_path(profile), class: 'card-link' %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="newsletter-form">
  <div class="container">
    <h2>Sign up to our newsletter</h2>
    <p>Keep in touch with our latest development</p>
    <div class="form-inline">
    <%= text_field_tag :email, nil, :placeholder => "email@hellodj.com", :class => "form-control" %>
    <%= submit_tag "Submit", class: "btn btn-danger" %>
    </div>
  </div>
</div>



